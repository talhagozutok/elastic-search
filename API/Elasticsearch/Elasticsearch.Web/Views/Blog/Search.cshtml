@model List<BlogViewModel>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container">
    <div class="col-md-10 offset-md-1">
        <form asp-action="Search">
            <div class="mb-3">
                <label>Search (Title, Content)</label>
                <input name="searchText"
                       class="form-control" 
                       value="@(ViewData["searchText"])"  />
            </div>
            <button class="btn btn-primary"
                    type="submit">
                Search
            </button>
        </form>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Could not find any result.
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>UserId</th>
                        <th>Tags</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.Id</td>
                            <td>@blog.Title</td>
                            <td>@blog.Content</td>
                            <td>@blog.UserId</td>
                            <td>@blog.Tags</td>
                            <td>@blog.CreatedOn</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>

