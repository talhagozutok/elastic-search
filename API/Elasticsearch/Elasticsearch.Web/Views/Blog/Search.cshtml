
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container">
    <div class="col-md-10 offset-md-1">
        <form asp-action="Search">
            <div class="mb-3">
                <label>Search (Title, Content)</label>
                <input 
                    name="searchText" 
                    class="form-control"/>
            </div>
            <button 
                class="btn btn-primary"
                type="submit">
                Search
            </button>
        </form>
    </div>
</div>

